<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_dark_blue">
    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="@dimen/img_start_4_pic_size"
        android:layout_height="@dimen/img_start_4_pic_size"
        android:src="@drawable/yak"
        android:layout_centerInParent="true"/>
    <ProgressBar
        android:id="@+id/progressbar_splash"
        android:layout_width="@dimen/img_start_4_pic_size"
        android:layout_height="10dp"
        android:layout_below="@id/img_splash"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>