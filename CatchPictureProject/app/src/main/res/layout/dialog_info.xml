<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_correct_custom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/blue_strong">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textSize="@dimen/text_size_correct"
                android:textColor="@color/light_green"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/blue_light">
            <TextView
                android:id="@+id/tvInfomation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dont_enough_coin"
                android:textSize="@dimen/text_size_reveal"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue_strong"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btInfoYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_green_yes"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/button_yes_margin_left"
                android:layout_marginRight="@dimen/button_yes_margin_left"
                android:layout_marginTop="@dimen/button_yes_margin_top"
                android:layout_marginBottom="@dimen/button_yes_margin_top"
                android:textSize="@dimen/text_size_dialog_no"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="YES"
                />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_exit_dialog_info"
        android:layout_width="@dimen/bt_exit_dialog_size"
        android:layout_height="@dimen/bt_exit_dialog_size"
        android:background="@drawable/ic_exit_dialog"
        android:layout_gravity="right"/>
</FrameLayout>