<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back_ground_dark_blue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:orientation="horizontal"
        android:background="@color/dark_blue">
        <Button
            android:id="@+id/bt_share_app_start"
            android:layout_width="@dimen/button_challenge_size"
            android:layout_height="@dimen/button_challenge_size"
            android:background="@drawable/ic_share"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/ic_coin_start"
            android:layout_width="@dimen/button_challenge_size"
            android:layout_height="@dimen/button_challenge_size"
            android:background="@drawable/ic_coin_drawable"
            android:layout_marginLeft="@dimen/ic_coin_start_margin_left"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tvNumberCoinStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ic_challenge_margin_left"
            android:text="0"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_size_number_coin"
            android:layout_alignLeft="@id/ic_coin_start"
            android:layout_centerVertical="true" />
        <Button
            android:id="@+id/button_setting"
            android:layout_width="@dimen/button_challenge_size"
            android:layout_height="@dimen/button_challenge_size"
            android:background="@drawable/ic_setting_drawable"
            android:layout_marginLeft="@dimen/ic_setting_margin_left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_4_pic_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/yak"
        />
    <Button
        android:id="@+id/btPlayNow"
        android:layout_width="@dimen/button_play_width"
        android:layout_height="@dimen/button_play_height"
        android:layout_centerInParent="true"
        android:layout_below="@id/img_4_pic_start"
        android:background="@drawable/bt_play"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer"
        android:layout_alignParentBottom="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
